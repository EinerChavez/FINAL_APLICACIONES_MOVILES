<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="20dp"
    android:padding="16dp"
    app:cardBackgroundColor="#B6B6B6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Registro Reclamo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFechaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="Viernes 21 de mayo del 2024"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtSede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/bg_rectangle"
            android:hint="Sede:"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtComercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/bg_rectangle"
            android:hint="Comensal:"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/bg_rectangle"
            android:hint="Plato:"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/edtMesa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle"
                android:hint="Mesa:"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtMonto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle"
                android:hint="Monto:"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtMozo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_rectangle"
            android:hint="Mozo:"
            android:inputType="text" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:fillViewport="true">

            <EditText
                android:id="@+id/edtActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle"
                android:gravity="top"
                android:hint="Reclamo:"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="5"
                android:paddingTop="40dp"
                android:scrollbars="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="@color/design_default_color_secondary"
            android:padding="10dp"
            android:text="REGISTRAR"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
